<div class="btn-group">

{% if not (('delete' in actions) and (not hide_delete)) %}
<a class="btn btn-primary" href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}">
    <i class="fa fa-list"></i> Lista {{ entity }}
</a>
{% endif %}
{% if ('edit' in actions) and (not hide_edit) %}
    <a class="btn btn-primary" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
        <i class="fa fa-list"></i> Edycja {{ entity }}
    </a>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
    {{ '{{ form(delete_form) }}' }}
{% endif %}
</div>
