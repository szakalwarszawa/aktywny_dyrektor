            <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
            <![endif]-->
        {% endblock %}

        <title>Aktywny Dyrektor 2.0 {% block title %}{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    </div>
        {% if app.user %}
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Aktywny Dyrektor <small>v2.0 beta</small></a>
                    </div>
                    
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class=""><a href="{{ path('main') }}"><i class="fa fa-home"></i> Strona główna</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-book"></i> Słowniki <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('departament') }}">Biura / Departamenty</a></li>
                                    <li><a href="{{ path('section') }}">Sekcje</a></li>
                                    <li><a href="{{ path('position') }}">Stanowiska</a></li>
                                    <li><a href="{{ path('engagement') }}">Zaangażowania</a></li>
                                    <li><a href="{{ path('zasoby') }}">Zasoby</a></li>
                                    <li><a href="{{ path('uprawnienia') }}">Uprawnienia</a></li>
                                    <li><a href="{{ path('grupyuprawnien') }}">Grupy uprawnień</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-file-text"></i> Raporty <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Raport 1</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Raport 2</a></li>
                                </ul>
                            </li>
                            <li class=""><a href="{{ path('form_file_ecm') }}"><i class="fa fa-floppy-o"></i> Wczytaj dane z ECM</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ app.user.username }} <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('logout') }}"><i class="fa fa-sign-out"></i> Wyloguj</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        {% endif %}
        <div class="container">
            {% if not app.user %}
            <div class="row">
                <div class="page-header">
                    <h1>Aktywny Dyrektor <small>v2.0<small> beta</small></small></h1>
                </div>
            </div>
            {% endif %}
            <div class="row">
    {% block body %}{% endblock %}
            </div>

        </div>
    </body>
</html>
