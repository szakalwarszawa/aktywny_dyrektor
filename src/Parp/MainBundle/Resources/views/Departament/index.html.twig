{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lista Biur i Departamentów</h1>
    
    {% for flashMessage in app.session.flashbag.get('warning') %}
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Uwaga!</strong> 
            {{ flashMessage }}
        </div>       
    {% endfor %}

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Pełna nazwa</th>
                <th>Skrót</th>
                <th>Działania</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.shortname }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('departament_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i> Edycja</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a class="btn btn-primary" href="{{ path('departament_new') }}">
                <i class="fa fa-plus"></i> Dodaj Biuro/Departament
            </a>

    {% endblock %}
