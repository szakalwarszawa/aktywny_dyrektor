{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Dodaj stanowisko</h1>

    {% if not form.vars.valid %}
        <div class="alert alert-danger" role="alert">
            {{ form_errors(form.name)}}
        </div>
    {% endif %}

    <form class="form-horizontal" name="parp_mainbundle_position" method="post" action="{{ path('position_create') }}">
        <div class="form-group">
            {{ form_label(form.name) }}
            <div class="col-sm-10">
                {{ form_widget(form.name) }}
            </div>
        </div>

        <div class="form-group">

            <div class="col-sm-10">
                <button id="Zapisz" name="Zapisz" type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Dodaj stanowisko</button>

            </div>
        </div>   
        {{ form_widget(form._token) }}
    </form> 


    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('position') }}">
            <i class="fa fa-list"></i> Lista stanowisk
        </a>
    </div>
{% endblock %}
