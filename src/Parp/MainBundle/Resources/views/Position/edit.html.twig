{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Edycja stanowiska</h1>

    {% if not edit_form.vars.valid %}
        <div class="alert alert-danger" role="alert">
            {{ form_errors(edit_form.name)}}
            {{ form_errors(edit_form.shortname)}}
        </div>
    {% endif %}

    {% for flashMessage in app.session.flashbag.get('warning') %}
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Uwaga!</strong> 
            {{ flashMessage }}
        </div>       
    {% endfor %}

    <form class="form-horizontal" name="parp_mainbundle_position" method="post" action="{{ path('position_update',{ id : id })}}">
        <input type="hidden" name="_method" value="PUT">

        <div class="form-group">
            {{ form_label(edit_form.name) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.name) }}
            </div>
        </div>
        <div class="form-group">

            <div class="col-sm-10">
                <button id="Zapisz" name="Zapisz" type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Zapisz zmiany</button>

            </div>
        </div>   
        {{ form_widget(edit_form._token) }}
    </form> 

    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('position') }}">
            <i class="fa fa-list"></i> Lista stanowisk
        </a>
    </div>


{% endblock %}
