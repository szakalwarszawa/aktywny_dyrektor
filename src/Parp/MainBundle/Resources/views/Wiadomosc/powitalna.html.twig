                    {%if(g.zasob)%}
                    <a href="{{url('zasoby_edit', {id: g.zasob.id})}}">{{g.grupaAD}}</a>
                    
                    
                    <a href="{{url('wnioseknadanieodebraniezasobow_new_dla_zasobow', {'zasobyId' : g.zasob.id})}}" class="btn btn-success">Złóż wniosek o nadanie uprawnień do tego zasobu</a>
