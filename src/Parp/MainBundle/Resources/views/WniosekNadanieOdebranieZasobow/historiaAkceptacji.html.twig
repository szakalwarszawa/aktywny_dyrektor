<table class="record_properties table table-striped">
    <tbody>
        
        <tr>
            <th>Data</th>
            <th>Kto</th>
            <th>Nowy status</th>
            <th>Zaakceptowano</th>
        </tr>

        {% for ss in entity.wniosek.statusy %}
            <tr>
                <td>{{ ss.createdAt|date("Y-m-d H:i:s")}}</td>
                <td>
                    {%if(ss.zastepstwo)%}
                        <div class="alert alert-danger"
                        data-toggle="popover" title="Zastepstwo"  data-placement="top"
                        data-content="ZastÄ™pstwo za {{ss.zastepstwo.kogoZastepuje}} od  {{ss.zastepstwo.dataOd|date("Y-m-d")}} do {{ss.zastepstwo.dataDo|date("Y-m-d")}}">
                            {{ ss.createdBy }} w zastepstwie za {{ss.zastepstwo.kogoZastepuje}}
                        </div>
                    {%else%}
                        {{ ss.createdBy }}
                    {%endif%}
                </td>
                <td>{{ ss.statusName }}</td>
                <td>
                {% if ss.rejected %}
                    <div class="alert alert-danger">
                    NIE <br>
                    {{ss.opis}}
                    </br>
                {%else%}
                    <div class="alert alert-success">
                    TAK
                    </div>
                {%endif%}
                </td>
            </tr>
        {%endfor%}

    </tbody>
</table>