{% extends '::base.html.twig' %}

{% block body -%}
    <div class="col-sm-12">
        <div class="alert alert-danger">
        Nie masz uprawnień do edycji tego wniosku w tym momencie.
        <br>
        Status wniosku : {{wniosek.status}}
        
        {% if viewer %}
            <h3>Osoby które mogą obecnie edytować wniosek</h3>
            <ul>
                {%if wniosek.lockedBy is null%}
                    {% for e in wniosek.editors %}
                        <li>{{e.samaccountname}}</li>                    
                    {%endfor%}
                {%else%}
                    <li>{{wniosek.lockedBy}}</li>
                {%endif%}
            </ul>
            <h3>Osoby które mogą obecnie oglądać wniosek</h3>
            <ul>
                {% for e in wniosek.viewers %}
                    <li>{{e.samaccountname}}</li>                    
                {%endfor%}
            
            </ul>
        
        {%endif%}
        </div>
    </div>

    
    
<script type="text/javascript"src="{{ asset('js/wnioskiZasoby.js') }}"></script>

{% endblock %}
