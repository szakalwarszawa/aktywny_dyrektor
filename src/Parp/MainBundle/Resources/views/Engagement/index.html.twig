{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Zaangażowania</h1>
    
    {% for flashMessage in app.session.flashbag.get('warning') %}
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Uwaga!</strong> 
            {{ flashMessage }}
        </div>       
    {% endfor %}

    <table class="table table-striped table-bordered">
        <tr>
            <th>Nazwa</th>
            <th>Działania</th>
        </tr>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>

                    {#<a class="btn btn-primary" href="{{ path('position_show', { 'id': entity.id }) }}">Podgląd</a>#}
                    <a class="btn btn-primary" href="{{ path('engagement_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i>Edycja</a>

                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('engagement_new') }}">
    <i class="fa fa-plus"></i> Utwórz nowe zaangażowanie
</a>            
    {% endblock %}
