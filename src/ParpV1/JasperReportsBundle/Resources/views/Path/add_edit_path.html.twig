{% extends '::base.html.twig' %}
{% block body %}
    <div class="container form-horizontal">
        <h3>Wprowadź nowy folder lub raport</h3>
        <hr />
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.url) }}
                <div class="col-sm-10">
                    {{ form_widget(form.url, {attr: {class: 'form-control', maxlength: 250, placeholder: 'Wprowadź adres raportu lub folderu'}}) }}
                    <small class="label label-default">Zostanie sprawdzona poprawność adresu.</small>
                    {{ form_errors(form.url) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.title) }}
                <div class="col-sm-10">
                    {{ form_widget(form.title, {attr: {class: 'form-control', maxlength: 250, placeholder: 'Wprowadź tytuł raportu/folderu (opcjonalne)' }}) }}
                    <small class="label label-default">W przypadku dodawania folderu, tytuł zostanie zignorowany.</small>
                    {{ form_errors(form.title) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    {{ form_widget(form.isRepository) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    {{ form_widget(form.submit, {attr: {class: 'btn btn-success btn-block'}}) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
