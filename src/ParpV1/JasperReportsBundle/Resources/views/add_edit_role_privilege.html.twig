{% extends '::base.html.twig' %}
{% block body %}
    <div class="container form-horizontal">
        <h3>Ustawienie uprawnień podglądu raportów dla roli </h3>
        <hr />
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.role) }}
                <div class="col-sm-10">
                    {{ form_widget(form.role, {attr: {class: 'form-control'}}) }}
                    <small class="label label-default">
                        Role podświetlone na szaro zostały już wprowadzone.
                        Możliwa jest tylko edycja istniejącej konfiguracji.
                    </small>
                    {{ form_errors(form.role) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.paths) }}
                <div class="col-sm-10">
                    {{ form_widget(form.paths, {attr: {class: 'form-control select2'}}) }}
                    <small class="label label-default">Możliwość wielokrotnego wyboru.</small>
                    {{ form_errors(form.paths) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    {{ form_widget(form.submit, {attr: {class: 'btn btn-success btn-block'}}) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
