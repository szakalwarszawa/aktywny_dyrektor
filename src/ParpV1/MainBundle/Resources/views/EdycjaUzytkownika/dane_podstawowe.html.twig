        {{ form_label(imie_nazwisko) }}
        {{ form_widget(imie_nazwisko) }}
        {{ form_errors(imie_nazwisko, {attr: {'class': 'alert-danger'}}) }}
        <hr/>
    </div>

    {# DEPARTAMENT / BIURO #}
    {% set departament = attribute(form, constant(ad_user_constants ~ '::DEPARTAMENT_NAZWA')) %}
