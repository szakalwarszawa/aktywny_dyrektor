        {{ form_label(stanowisko) }}
        {{ form_widget(stanowisko) }}
        {{ form_errors(stanowisko) }}
        <hr/>
    </div>

    {# SEKCJA #}
    {% set sekcja = attribute(form, constant(ad_user_constants ~ '::SEKCJA_NAZWA')) %}
    <div class="form-group {% if not sekcja.vars.valid %}has-error{% endif %}">
        {{ form_label(sekcja) }}
        {{ form_widget(sekcja) }}
        {{ form_errors(sekcja) }}
        <hr/>
