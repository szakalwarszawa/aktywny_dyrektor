        {{ form_label(departament) }}
        {{ form_widget(departament) }}
        {{ form_errors(departament) }}
        <hr/>
    </div>

    {# STANOWISKO #}
    {% set stanowisko = attribute(form, constant(ad_user_constants ~ '::STANOWISKO')) %}
