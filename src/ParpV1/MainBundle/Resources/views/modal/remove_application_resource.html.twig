<div class="modal-dialog modal-md">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Potwierdź usunięcie uprawnienia z wniosku</h4>
        </div>
        <div class="modal-body">
            <div class="alert alert-info">Wprowadź komentarz usunięcia uprawnienia z wniosku.</div>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.comment) }}
                    <div class="col-sm-12">
                    {{ form_widget(form.comment, {'attr': {'placeholder': 'Wprowadź komentarz'}}) }}
                    </div>
                </div>
                <div class="form-group pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
