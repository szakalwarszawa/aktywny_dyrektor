{% extends '::base.html.twig' %}

{% block body %}
    <h1>Changelog - szczegóły wpisu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ changelog.id }}</td>
            </tr>
            <tr>
                <th>Utworzony</th>
                <td>{{ changelog.createdAt ? changelog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ changelog.samaccountname }}</td>
            </tr>
            <tr>
                <th>Wersja</th>
                <td>{{ changelog.wersja }}</td>
            </tr>
            <tr>
                <th>Dodatkowy tytul</th>
                <td>{{ changelog.dodatkowyTytul }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ changelog.opis }}</td>
            </tr>
            <tr>
                <th>Opublikowany</th>
                <td>{{ changelog.opublikowany ? 'Tak' : 'Nie' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('changelog_edit', {'id': changelog.id}) }}" class="btn btn-danger"><i class="fas fa-edit"></i> Edycja</a>
    {{ include('changelog/_delete_form.html.twig') }}
    <a href="{{ path('changelog_index') }}" class="btn btn-info"><i class="fas fa-list-alt"></i> powrót do listy</a>
{% endblock %}
