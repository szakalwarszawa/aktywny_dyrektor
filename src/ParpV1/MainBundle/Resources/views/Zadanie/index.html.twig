{% extends '::base.html.twig' %}

{% block body %}
<h1>Lista Zadanie</h1>
{% for flashMessage in app.session.flashbag.get('warning') %}
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Uwaga!</strong> 
        {{ flashMessage }}
    </div>       
{% endfor %}


<div class="col-sm-12">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#aktywne">Do zrobienia</a></li>
        <li><a data-toggle="tab" href="#historia">Zrobione</a></li>
    </ul>
    
    <div class="tab-content">
        <div id="aktywne" class="tab-pane fade in active">
            <div class="tabContent container">
                <center>
                    <div class="btn-group">
                        <a class="btn btn-primary btn-xs" href="{{ path('zadanie_new') }}">Dodaj Zadanie</a>
                    </div>
                </center>
                
                {{ grid(grid,'ParpMainBundle:Default:index_grid.html.twig') }}
            </div>
        </div>            
        <div id="historia" class="tab-pane fade">
            <div  class="tabContent container">
                
                {{ grid(grid2,'ParpMainBundle:Default:index_grid.html.twig') }}
            </div>
        </div>
    </div>
</div>





{% endblock %}


