{% extends '::base.html.twig' %}

{% block body %}
<h1>Lista Departament</h1>
{% for flashMessage in app.session.flashbag.get('warning') %}
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Uwaga!</strong>
        {{ flashMessage }}
    </div>
{% endfor %}

<div class="center-block">
    <div class="btn-group">
        <a class="btn btn-primary btn-xs" href="?{{ grid.hash }}[_reset]=">Wyczyść filtr i sortowanie</a>
        <a class="btn btn-primary btn-xs" href="{{ path('departament_new') }}">Dodaj Departament</a>
    </div>
</div>


    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#nowe">Nowa struktura 2016</a></li>
        <li><a data-toggle="tab" href="#stare">Stara struktura</a></li>
    </ul>

    <div class="tab-content">
        <div id="nowe" class="tab-pane fade in active">
            {{ grid(grid,'ParpMainBundle:Default:index_grid.html.twig') }}
        </div>
        <div id="stare" class="tab-pane fade">
            {{ grid(grid2,'ParpMainBundle:Default:index_grid.html.twig') }}
        </div>
    </div>



{% endblock %}
