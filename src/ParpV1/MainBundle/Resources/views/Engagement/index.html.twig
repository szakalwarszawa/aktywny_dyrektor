{% extends '::base.html.twig' %}

{% block body %}
<h1>Lista zaangażowań</h1>
{% for flashMessage in app.session.flashbag.get('warning') %}
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Uwaga!</strong>
        {{ flashMessage }}
    </div>
{% endfor %}

<div class="center-block">
    <div class="btn-group">
        <a class="btn btn-primary btn-xs" href="?{{ grid.hash }}[_reset]=">Wyczyść filtr i sortowanie</a>
        <a class="btn btn-primary btn-xs" href="{{ path('engagement_new') }}">Dodaj zaangażowanie</a>
        {% if is_granted(expression('"PARP_IMPORT_ZAANGAZOWANIE" in roles')) %}
        <a class="btn btn-warning btn-xs" href="{{ path('engagement_import') }}">Importuj zaangażowania pracowników z pliku</a>
        {% endif %}
    </div>
</div>

{{ grid(grid,'ParpMainBundle:Default:index_grid.html.twig') }}

{% endblock %}
